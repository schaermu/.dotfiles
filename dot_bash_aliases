# system aliases
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'
alias up='sudo apt update'
alias upg='sudo parrot-upgrade'
alias alert='notify-send --urgency=low -i "$([ $? = 0 ] && echo terminal || echo error)" "$(history|tail -n1|sed -e '\''s/^\s*[0-9]\+\s*//;s/[;&|]\s*alert$//'\'')"'

# command aliases
alias code="codium"

# shortcuts
alias fullscan="sudo nmap -sV -sC -O -T5 -n -Pn -p-"
